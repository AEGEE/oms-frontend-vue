{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist/ts/",
    "sourceMap": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": false,
  },
  "include": [
    "./src/**/*"
  ]
}
